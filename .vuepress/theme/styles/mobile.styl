// wide mobile
@media (max-width: 1100px)
  html
    font-size 70%
  .article__img
    height 98px
    margin-left 10px
    width 154px

@media (max-width: $MQMobile)
  .theme-container__left
    display none

  .theme-container__right
    margin-left 0
    min-width 100%
    width 100%

    .article__img
      height 70px
      margin-left 10px
      width 110px

    .back, .leancloud_visitors
      left 10px
      z-index 10

// narrow mobile
@media (max-width: $MQMobileNarrow)
  .theme-container__left
    display none

  .theme-container__right
    margin-left 0
    max-width 100%
    min-width 375px
    padding 3em
    width 100%

    .article__img
      height 70px
      margin-left 10px
      width 110px

    .back, .leancloud_visitors
      left 5px
      z-index 10

  h1
    font-size 1.9rem

  {$contentClass}
    div[class*='language-']
      border-radius 0
      margin .85rem -1.5rem
