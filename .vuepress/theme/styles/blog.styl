
.theme-container
  &__left
    background url('https://blogcdn.dandyweng.com/backgrounds/10.jpg'), rgba(0, 0, 0, .5) // blogcdn.dandyweng.com/backgrounds/10.jpg) ,rgba(0, 0, 0, 0.5)
    bottom 0
    color #fff
    height 100vh
    position fixed
    top 0
    width 33.3%

    .widget-container
      background-color rgba(0, 0, 0, .4)
      height 100%
      padding-top 5em
      width 100%

    .avatar
      background-size cover
      border-radius 100px 100px
      box-shadow 0 0 0 2px rgba(255, 255, 255, .5), 0 2px 20px 3px rgba(0, 0, 0, .25)
      height 75px
      overflow hidden
      width 75px

  &__desc
    align-items center
    display flex
    flex-direction column
    justify-content center
    text-align center
    .desc__location
      margin 0
      font-size: 12px

    h1
      font-size 18px
      font-weight 400
      margin-bottom 0

    h2
      border none
      font-weight 300
      margin-top 0
      font-size: 12px

  &__social
    width 200px
    margin 0 auto

    ul
      display flex
      justify-content space-around
      padding 0

      li
        cursor pointer

        i
          font-size 20px

  .words
    display grid
    grid-template-columns 30px 1fr 1fr 30px
    grid-template-rows 30px 1fr 30px 30px

    .grid1
      grid-column-end 4
      grid-column-start 2
      position relative
      font-size: 40px
      // line-height 30px

      &:after
        content ''
        display block
        position absolute
        height 1px
        width: 100%
        background: rgba(255,255,255,.1)
        top 20px
    .grid2
      grid-column-start 2
      grid-column-end 4
      grid-row-start: 2
      letter-spacing: 1px
      padding-top 10px
      padding-bottom 10px
      text-indent: 2em
    .grid3
      grid-column-start 2
      grid-column-end 4
      grid-row-start: 3
      letter-spacing: .5px
      padding-bottom 10px
      text-align: right
    .grid4
      grid-column-start 2
      grid-column-end 4
      grid-row-start: 4
      position relative
      font-size: 40px
      text-align: right

      &:after
        content ''
        display block
        position absolute
        height 1px
        width: 100%
        background: rgba(255,255,255,.1)
        top 20px

  &__right
    // background pink
    margin-left 33.3%
    max-width 66.6%
    min-height 100vh
    width calc(100% - 33.3%)
    padding 4em
  .footer
    position absolute
    bottom 0
    font-size: 12px
    text-align: center
    left 0
    right 0
    color rgba(255,255,255,0.3)
    padding-bottom 10px
    p
      margin 0


.detail
  position relative
  .leancloud_visitors
    position fixed
    left 34.5%
    // color rgba(0,0,0,.2)
    transition .3s all
    cursor pointer
    top 130px
    span
      display block
      font-size 12px
  .back
    position fixed
    left 34.5%
    color rgba(0,0,0,.2)
    transition .3s all
    cursor pointer
    &:hover
      color rgba(0,0,0,.8)

    span, i
      display block
    .icon-back
      font-size 20px
    span
      font-size 12px
  .content__default
    > p
      letter-spacing .35px
      line-height 1.9
      margin-bottom 1.725rem
  &__times
    font-size 13px
    opacity .7
  &__header
    margin 0
    border none
  .content__default
    img
      max-width 100%